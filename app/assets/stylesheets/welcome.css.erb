/* ============================
   Section 0 - Non responsive
   ============================ */
   
.container {
	width: 970px;
}

.primary-nav .container .navbar-header,
.primary-nav .container .navbar-collapse {
  margin-right: 0;
  margin-left: 0;
}

/* Always float the navbar header */
.primary-nav .navbar-header {
  float: left;
}

/* Undo the collapsing navbar */
.primary-nav .navbar-collapse {
  display: block !important;
  height: auto !important;
  padding-bottom: 0;
  overflow: visible !important;
}

.primary-nav .navbar-toggle {
  display: none;
}
.primary-nav .navbar-collapse {
  border-top: 0;
}

.primary-nav .navbar-brand {
  margin-left: -15px;
}

/* Always apply the floated nav */
.primary-nav .navbar-nav {
  float: left;
  margin: 0;
}
.primary-nav .navbar-nav > li {
  float: left;
}
.primary-nav .navbar-nav > li > a {
  padding: 15px;
}

/* Redeclare since we override the float above */
.primary-nav .navbar-nav.navbar-right {
  float: right;
}

/* Undo custom dropdowns */
.primary-nav .navbar .navbar-nav .open .dropdown-menu {
  position: absolute;
  float: left;
  background-color: #fff;
  border: 1px solid #cccccc;
  border: 1px solid rgba(0, 0, 0, 0.15);
  border-width: 0 1px 1px;
  border-radius: 0 0 4px 4px;
  -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
          box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
}
.primary-nav .navbar-default .navbar-nav .open .dropdown-menu > li > a {
  color: #333;
}
.primary-nav .navbar .navbar-nav .open .dropdown-menu > li > a:hover,
.primary-nav .navbar .navbar-nav .open .dropdown-menu > li > a:focus,
.primary-nav .navbar .navbar-nav .open .dropdown-menu > .active > a,
.primary-nav .navbar .navbar-nav .open .dropdown-menu > .active > a:hover,
.primary-nav .navbar .navbar-nav .open .dropdown-menu > .active > a:focus {
  color: #fff !important;
  background-color: #428bca !important;
}
.primary-nav .navbar .navbar-nav .open .dropdown-menu > .disabled > a,
.primary-nav .navbar .navbar-nav .open .dropdown-menu > .disabled > a:hover,
.primary-nav .navbar .navbar-nav .open .dropdown-menu > .disabled > a:focus {
  color: #999 !important;
  background-color: transparent !important;
}

.navbar-toggle {position: absolute; right: 0px;}
   
