
	

/* ============================
   Section 1 - Navbar
   ============================ */

.primary-nav ul.nav {
	padding-top: 15px;
}

.primary-nav ul.nav li {
	border-top: 0px solid transparent;
	transition: all 0.1s ease-in-out;
	text-transform: uppercase;
	letter-spacing: 1px;
	font-weight: 500;
	font-size: 12px;
	margin: 0px 10px;
}

.primary-nav ul.nav li a {
	padding-top: 5px;
	padding-left: 2px;
	padding-right: 2px;

	
}

.primary-nav .navbar-nav>li>a {color: #fff;}
.primary-nav .navbar-nav>li>a:hover {color: #fff; }

.primary-nav ul.nav li:hover {
	cursor:pointer;
	border-top: 3px solid #ff8500;
	transition: all 0.1s ease-in-out;
}


.primary-nav {
	padding-top: 25px;
	background-color: transparent;
	border-bottom:none;
	opacity: 1;
	transition: all 0.3s ease-in-out;
	margin-top: 0px;
}

.primary-nav .navbar-brand {
	color:#fff;
}

.visible {
	opacity: 0;
	margin-top: -50px;
	transition: all 0.3s ease-in-out;
}

.secondary-nav {
	opacity: 1;
	display:block;
	padding-top: 5px;
	transition: all 0.3s ease-in-out;
	background-color: f8f8f8;
	border-bottom: 1px solid rgba(0,0,0,0.1);
	
}

.secondary-visible {
	opacity: 0;
	display:block;
	transition: all 0.3s ease-in-out;
	margin-top: -50px;
}

.secondary-nav ul.nav li {
	text-transform: uppercase;
	letter-spacing: 1px;
	font-weight: 500;
	font-size: 12px;
	margin: 0px 10px;
	margin-top: 0px;
}

.secondary-nav ul.nav li:hover {
	cursor: pointer;
}

.secondary-nav .navbar-nav>li>a:hover {color: #ff8500;}

.secondary-nav ul.nav li a {
	padding-top: 15px;
	padding-left: 2px;
	padding-right: 2px;
	
}

